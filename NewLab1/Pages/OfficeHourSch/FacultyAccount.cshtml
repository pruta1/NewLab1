<form asp-page-handler="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.EditView.FacultyID" />

    <label asp-for="@Model.EditView.FirstName"></label>
    <input type="text" asp-for="@Model.EditView.FirstName" />
    <br /><br />
    <label asp-for="@Model.EditView.LastName"></label>
    <input type="text" asp-for="@Model.EditView.LastName" />
    <br /><br />
    <label asp-for="@Model.EditView.FacultyEmail"></label>
    <input type="text" asp-for="@Model.EditView.FacultyEmail" />
    <br /><br />
    <label asp-for="@Model.Picture">Upload Picture:</label>
    <input type="file" name="Picture" />
    <br /><br />

    <input type="submit" class="btn btn-success" value="Save" />
</form>
