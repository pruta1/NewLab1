@page "{facultyid:int?}"
@model NewLab1.Pages.OfficeHourSch.FacultyAccountModel
@{
}
<h1>Faculty Account Information</h1>

Profile Picture:
<div style="max-width: 300px;">
    <img src="/Images/@Model.EditView.Image" style="max-width: 100%;" />
</div>

<br />
<br />
<br />
