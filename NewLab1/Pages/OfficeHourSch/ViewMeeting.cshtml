@page "{studentId:int}/UploadImage"
@using NewLab1.Pages.DB;
@using System.Data.SqlClient;
@model NewLab1.Pages.OfficeHourSch.ViewMeetingModel
@{
}
@{
    ViewData["Title"] = "Upload Image";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="imageFile">Select an image file:</label>
        <input type="file" class="form-control-file" id="imageFile" name="ImageFile" accept="image/*" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-page="/Student/Index" class="btn btn-secondary">Cancel</a>
   
</form>
}